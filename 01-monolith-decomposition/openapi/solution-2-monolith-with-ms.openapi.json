{
  "openapi": "3.0.0",
  "info": {
    "title": "Solution 2 - Monolith with Microservices API",
    "description": "Monolith service with extracted dialog microservice",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080",
      "description": "Monolith server (user management, auth, dialog proxy)"
    },
    {
      "url": "http://localhost:8081",
      "description": "Dialog service (message storage and retrieval)"
    }
  ],
  "paths": {
    "/user/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Monolith"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["first_name", "second_name", "birthdate", "biography", "city", "password"],
                "properties": {
                  "first_name": {
                    "type": "string",
                    "example": "John"
                  },
                  "second_name": {
                    "type": "string",
                    "example": "Doe"
                  },
                  "birthdate": {
                    "type": "string",
                    "format": "date",
                    "example": "1990-01-01"
                  },
                  "biography": {
                    "type": "string",
                    "example": "Hello!"
                  },
                  "city": {
                    "type": "string",
                    "example": "Moscow"
                  },
                  "password": {
                    "type": "string",
                    "example": "secret"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User registered successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "user_id": {
                      "type": "string",
                      "example": "user123"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid data or birthdate"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "Login user",
        "tags": ["Monolith"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["id", "password"],
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "user123"
                  },
                  "password": {
                    "type": "string",
                    "example": "secret"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string",
                      "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..."
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Invalid data"
          },
          "404": {
            "description": "User not found or invalid password"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/dialog/{user_id}/send": {
      "post": {
        "summary": "Send message to user (proxied to dialog service)",
        "tags": ["Monolith"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "user456"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["text"],
                "properties": {
                  "text": {
                    "type": "string",
                    "example": "Hi there!"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Message sent successfully"
          },
          "400": {
            "description": "Invalid request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Dialog service error"
          }
        }
      }
    },
    "/dialog/{user_id}/list": {
      "get": {
        "summary": "Get messages between users (proxied to dialog service)",
        "tags": ["Monolith"],
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "user_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "example": "user456"
          }
        ],
        "responses": {
          "200": {
            "description": "Messages retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string"
                      },
                      "from_user_id": {
                        "type": "string"
                      },
                      "to_user_id": {
                        "type": "string"
                      },
                      "text": {
                        "type": "string"
                      },
                      "created_at": {
                        "type": "string",
                        "format": "date-time"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Dialog service error"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "tags": [
    {
      "name": "Monolith",
      "description": "Monolith service endpoints (user management, auth, dialog proxy)"
    }
  ]
}
